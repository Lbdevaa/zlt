{
  "env": {
    "jquery": true
  },
  "overrides": [
    {
      "files": [
        // "src/**/*.js"
        "src/js*/*.js"
      ],
      "extends": [
        "standard",
        "htmlacademy/es6"
      ],
      "rules": {
        "indent": [
          "error",
          4
        ],
        "semi": [
          "error",
          "never"
        ],
        "quotes": [
          "error",
          "backtick"
        ]
      }
    }
  ]
}
